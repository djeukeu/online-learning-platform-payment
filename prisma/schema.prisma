generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentStatus {
  PENDING
  FAILED
  SUCCESS
}

enum PaymentMethod {
  CARD
  PAYPAL
}

model Payment {
  id             String        @id @default(uuid()) 
  ref            String        @unique
  user_id        String
  amount         Decimal
  status         PaymentStatus @default(PENDING)
  payment_method PaymentMethod
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([user_id])
  @@map("payment")
}
